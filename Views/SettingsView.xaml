<Window x:Class="Miller_Craft_Tools.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miller_Craft_Tools.Views"
        mc:Ignorable="d"
        Title="Settings" Height="320" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Miller Craft Tools Settings" FontWeight="Bold" FontSize="16" Margin="0,0,0,16"/>

            <CheckBox Content="Open Multiple 3D Views for Window Renumbering"
                      IsChecked="{Binding Open3DViewsForRenumbering, Mode=TwoWay}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="API Token:" Width="90" VerticalAlignment="Center"/>
                <PasswordBox x:Name="TokenBox" PasswordChar="*" Width="180" PasswordChanged="TokenBox_PasswordChanged"/>
                <Button Content="Copy" Width="50" Margin="8,0,0,0" Click="CopyToken_Click"/>
            </StackPanel>

            <Button Content="Login to Web App" Width="160" Margin="0,0,0,10" Click="LoginWebApp_Click"/>

            <TextBlock Text="(More settings coming soon...)" FontStyle="Italic" Foreground="Gray" Margin="0,16,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Save" Width="80" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
